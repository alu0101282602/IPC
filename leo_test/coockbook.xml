    <RECETA>
        <TITULO>Costillas de Cerdo</TITULO>
        <INGREDIENTE>
            <NOMBRE>Costillal</NOMBRE>
            <CANTIDAD>1</CANTIDAD>
            <UNIDAD>pieza</UNIDAD>
        </INGREDIENTE>
        <INGREDIENTE>
            <NOMBRE>Ajo</NOMBRE>
            <CANTIDAD>3</CANTIDAD>
